<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codepoet.website.mapper.PersonMapper">
    <resultMap id="PersonResultMap" type="com.codepoet.website.pojo.Person">
        <id column="p_id" property="personId"></id>
        <result column="p_name" property="name"></result>
        <result column="birth_day" property="birthDay"></result>
        <result column="dream_car" property="dreamCar"></result>
        <result column="hobby" property="hobby"></result>
    </resultMap>
    <select id="findAll" resultMap="PersonResultMap">
        select * from person
    </select>
</mapper>